{
    "$schema": "../handler-schema.json",
    "name": "Gerrit",
    "private": "gerrit",
    "branch": ["rev-parse", "--abbrev-ref"],
    "url": "{{ base }}/{{ repository }}/+/{{ ref | encode_uri }}/{{ file | encode_uri }}",
    "selection": "#{{ startLine }}{% if startLine != endLine %}-L{{ endLine }}{% endif %}",
    "reverse": {
        "pattern": [
            "/(?<username>[^/]+)",
            "/(?<repository>[^/]+)",
            "/blob",
            "/(?:[^/]+)",
            "/(?<file>[^#]+)",
            "(?:\\?[^#]*)?",
            "(?:#L(?<start>\\d+)(?:-L(?<end>\\d+))?)?"
        ],
        "file": "{{ match.groups.file | decode_uri }}",
        "fileMayStartWithBranch": true,
        "server": {
            "http": "{{ http }}/{{ match.groups.username }}/{{ match.groups.repository }}.git",
            "ssh": "{{ ssh }}:{{ match.groups.username }}/{{ match.groups.repository }}.git"
        },
        "selection": {
            "startLine": "{{ match.groups.start }}",
            "endLine": "{{ match.groups.end }}"
        }
    },
    "tests": {
        "settings": {
            "gerrit": [
                {
                    "http": "https://local-gerrit.server:8080/context",
                    "ssh": "ssh://git@local-gerrit.server"
                }
            ]
        },
        "createUrl": {
            "remotes": {
                "http": "https://local-gerrit.server:8080/context/foo/bar.git",
                "httpWithUsername": "https://username@local-gerrit.server:8080/context/foo/bar.git",
                "ssh": "git@local-gerrit.server:foo/bar.git",
                "sshWithProtocol": "ssh://git@local-gerrit.server:foo/bar.git",
                "result": "https://local-gerrit.server:8080/context/foo/bar/blob/master/src/file.txt"
            },
            "spaces": {
                "remote": "https://local-gerrit.server:8080/context/foo/bar.git",
                "result": "https://local-gerrit.server:8080/context/foo/bar/blob/master/src/path%20spaces/file%20spaces.txt"
            },
            "branch": {
                "remote": "https://local-gerrit.server:8080/context/foo/bar.git",
                "result": "https://local-gerrit.server:8080/context/foo/bar/blob/feature/test/src/file.txt"
            },
            "commit": {
                "remote": "https://local-gerrit.server:8080/context/foo/bar.git",
                "result": "https://local-gerrit.server:8080/context/foo/bar/+/{{ commit }}/src/file.txt"
            },
            "selection": {
                "remote": "https://local-gerrit.server:8080/context/foo/bar.git",
                "point": {
                    "line": 10,
                    "result": "https://local-gerrit.server:8080/context/foo/bar/+/master/src/file.txt#10"
                },
                "singleLine": {
                    "line": 10,
                    "startColumn": 20,
                    "endColumn": 30,
                    "result": "https://local-gerrit.server:8080/context/foo/bar/+/master/src/file.txt#10"
                },
                "multipleLines": {
                    "startLine": 10,
                    "startColumn": 20,
                    "endLine": 30,
                    "endColumn": 40,
                    "result": "https://local-gerrit.server:8080/context/foo/bar/+/master/src/file.txt#10"
                }
            }
        }
    }
}
